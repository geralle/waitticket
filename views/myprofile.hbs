<!DOCTYPE html>

<html>

<head>
  <meta>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" rel="stylesheet" type="text/css">
  <link href="profile.css" rel="stylesheet" type="text/css">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" type="text/javascript"></script>
  <title>waiTTicket - My Profile</title>
</head>

<body>

  <!-- START OF ADD TICKET POPUP -->

  <div id="addticketform">
    <form action="/api/tickets" method="post">
      <p class="closeform">X</p>
      <label>Event Title</label>
      <input class="form-control" id="event_title" name="event">
      <label>Date</label>
      <input class="form-control" id="form_date" name="date">
      <label>Time</label>
      <input class="form-control" id="form_time" name="time">
      <label>Venue</label>
      <input class="form-control" id="form_venue" name="venue">
      <select class="form-control" name="type">
        <option value="Select Type">
          Choose...
        </option>
        <option value="Music">
          Music
        </option>
        <option value="Sports">
          Sports
        </option>
      </select>
      <label>Ticket Link</label>
      <input class="form-control" name="pdf_link">
      <button class="btn btn-success" id="submit-btn" type="submit">Submit</button>
    </form>
  </div>



  <!-- END OF POPUP -->


  <!-- START OF MY TICKETS BOX -->
  <div class="card" id="mytickets">
    <div class="card-header text-center">
      <h4 class="card-title">My Tickets</h4>
    </div>
    <div class="card-body">

      <div class="scrollbar" id="style-13">
        <div class="force-overflow" id="ticket-container">
          <div class="row no-gutters" id="ticket-selection">
            <div class="col-12" id="searchFormatting">
              {{#each tickets}}
              <div class="border border-secondary">
                <p class="textTitle">{{this.event}}</p>
                <p class="venue">{{this.venue}}</p>
                <p>{{this.location}}</p>
                <p>{{this.date}}</p>
                <p>{{this.time}}</p>
              </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
  <!-- END OF MY TICKET BOX -->


  <!-- BEGIN NAV -->
  <nav class="navbar navbar-expand-lg">
    <a class="navbar-brand" href="/">
      <img class="logo-img" src="wait-ticket-logos-v3.png" alt="waiTTicket logo">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link addticketformButton">Add Ticket
            <span class="sr-only">(current)</span>
          </a>
        </li>
      </ul>
      <!-- <form class="form-inline my-2 my-lg-0">
        <button id="loginButton" class="btn btn-outline-light my-2 my-sm-0" type="submit">Login PROFILE PAGE</button>
      </form> -->
      <!-- <form class="form-inline my-2 my-lg-0">
        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">My Profile</button>
      </form> -->
      <button id="logoutButton" class="btn btn-outline-light my-2 my-sm-0" type="button">Logout</button>
    </div>
  </nav>
  <!-- END NAV -->


  <!-- main image -->
  <div class="main-image">
    <img src="orange-concert.jpg" class="img-fluid imgformatting" alt="crowded concert venue at night">
  </div>




  <!-- FOOTER -->
  <nav class="navbar" id="foot-nav">waiTTicket &copy; 2017 - help@waiTTicket.com</nav>

  <!-- scripts -->
  <script charset="utf-8" src="/myprofile.js" type="text/javascript"></script>
  <script src='https://api.mapbox.com/mapbox-gl-js/v0.40.0/mapbox-gl.js'></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" type="text/javascript"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" type="text/javascript"></script>
</body>

</html>
